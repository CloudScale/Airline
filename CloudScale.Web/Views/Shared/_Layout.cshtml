<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CloudScale Movies", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-small" })</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li data-bind="visible: !IsAuth()">
                        @Html.ActionLink("Register", "Index", "Home", null, new Dictionary<string, Object> { { "class", "btn btn-small" }, { "data-bind", "click: ShowRegister" } })
                    </li>
                    <li data-bind="visible: !IsAuth()">
                        @Html.ActionLink("Login", "Index", "Home", null, new Dictionary<string, Object> { { "class", "btn btn-small" }, { "data-bind", "click: ShowLogin" } })
                    </li>
                    <li data-bind="visible: IsAuth()">
                        @Html.ActionLink("Log Out", "Index", "Home", null, new Dictionary<string, Object> { { "class", "btn btn-small" }, { "data-bind", "click: Logout" } })
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/pnotify")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
