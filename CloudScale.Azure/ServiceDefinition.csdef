<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="CloudScale.Azure" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2014-01.2.3">
  <WorkerRole name="CloudScale.Movies.DataService" vmsize="Small">
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="Microsoft.ServiceBus.ConnectionString" />
      <Setting name="MoviesDataContext" />
    </ConfigurationSettings>
  </WorkerRole>
  <WorkerRole name="CloudScale.Movies.LookupService" vmsize="Small">
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="Microsoft.ServiceBus.ConnectionString" />
    </ConfigurationSettings>
  </WorkerRole>
  <WebRole name="CloudScale.Api" vmsize="Small">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="HTTP" endpointName="HTTP" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="HTTP" protocol="http" port="8081" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="Microsoft.ServiceBus.ConnectionString" />
    </ConfigurationSettings>
  </WebRole>
  <WebRole name="CloudScale.SignalR" vmsize="Small">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="HTTP" endpointName="HTTP" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="HTTP" protocol="http" port="8082" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="Microsoft.ServiceBus.ConnectionString" />
    </ConfigurationSettings>
  </WebRole>
  <WebRole name="CloudScale.Web" vmsize="Small">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="HTTP" endpointName="HTTP" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="HTTP" protocol="http" port="80" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="Microsoft.ServiceBus.ConnectionString" />
      <Setting name="WebHost" />
      <Setting name="ApiHost" />
      <Setting name="SignalRHost" />
    </ConfigurationSettings>
    <LocalResources>
      <LocalStorage name="DiagnosticStore" sizeInMB="20000" cleanOnRoleRecycle="false" />
    </LocalResources>
  </WebRole>
</ServiceDefinition>
