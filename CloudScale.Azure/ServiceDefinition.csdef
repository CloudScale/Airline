<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="CloudScale.Azure" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2014-01.2.3">
  <WebRole name="CloudScale.Web" vmsize="Small">
    <Sites>
      <Site name="Web" physicalDirectory="../../../CloudScale.Web">
        <Bindings>
          <Binding name="HTTP" endpointName="HTTP" hostHeader="movies.devopsnirvana.com" />
          <Binding name="HTTP" endpointName="HTTP" hostHeader="movies-dev.devopsnirvana.com" />
        </Bindings>
      </Site>
      <Site name="Api" physicalDirectory="../../../CloudScale.Api">
        <Bindings>
          <Binding name="HTTP" endpointName="HTTP" hostHeader="api.movies.devopsnirvana.com" />
          <Binding name="HTTP" endpointName="HTTP" hostHeader="api.movies-dev.devopsnirvana.com" />
        </Bindings>
      </Site>
      <Site name="SignalR" physicalDirectory="../../../CloudScale.SignalR">
        <Bindings>
          <Binding name="HTTP" endpointName="HTTP" hostHeader="signalr.movies.devopsnirvana.com" />
          <Binding name="HTTP" endpointName="HTTP" hostHeader="signalr.movies-dev.devopsnirvana.com" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="HTTP" protocol="http" port="80" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="Microsoft.ServiceBus.ConnectionString" />
      <Setting name="WebHost" />
      <Setting name="ApiHost" />
      <Setting name="SignalRHost" />
    </ConfigurationSettings>
    <LocalResources>
      <LocalStorage name="DiagnosticStore" sizeInMB="20000" cleanOnRoleRecycle="false" />
    </LocalResources>
  </WebRole>
</ServiceDefinition>
